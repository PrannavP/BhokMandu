@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var fullName = HttpContextAccessor.HttpContext.Session.GetString("FullName");
    var role = HttpContextAccessor.HttpContext.Session.GetString("Role");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BhokMandu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BhokMandu</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Restaurants" asp-action="Index">Restaurants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Foods" asp-action="Index">Foods</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto align-items-center">
                        <!-- Added align-items-center here -->
                        @if (!string.IsNullOrEmpty(fullName))
                        {
                            @if (role != "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark position-relative" href="/Cart/Index">
                                        Cart
                                        <span class="badge bg-danger"></span>
                                    </a> <!-- Badge for displaying count -->
                                </li>
                            }
                            <li class="nav-item align-self-center">
                                <!-- Added align-self-center here -->
                                <span class="navbar-text">Welcome, @fullName!</span> <!-- This will be aligned -->
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-danger ms-2" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary ms-2" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="/js/index.js"></script> <!-- Ensure this is included -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>