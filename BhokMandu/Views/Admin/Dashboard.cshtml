@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<div class="container-fluid">
    <div class="row flex-nowrap">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
            @Html.Partial("_AdminLayout")            
        </div>
        <div class="col py-3">
            <div class="container mt-4">
                <div class="row">
                    <div class="col text-center">
                        <h2>Admin Dashboard</h2>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-6 offset-md-3 text-center">
                        <h4>Welcome, Admin!</h4>
                        <p class="mt-3">Total Users: <strong>@ViewData["TotalUsers"]</strong></p>
                        <a href="@Url.Action("Users", "Admin")" class="btn btn-primary mt-2">Manage Users</a>
                        <a href="@Url.Action("Logout", "Admin")" class="btn btn-danger mt-2">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>