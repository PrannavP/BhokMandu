@model BhokMandu.Models.User

@{
	ViewData["Title"] = "Edit User";
	Layout = "_AdminLayout";
}

<head>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<h2>Edit User Details</h2>

<form asp-action="Edit" method="post">
	<div class="form-group">
		<label for="FullName">Full Name</label>
		<input type="text" class="form-control" id="FullName" name="FullName" value="@Model.FullName" required />
	</div>
	<div class="form-group">
		<label for="Email">Email</label>
		<input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
	</div>
	<div class="form-group">
        <label for="Role">Role</label>
        <select class="form-control" id="Role" name="Role">
			<option value="User" selected="@(Model.Role == "User")">User</option>
			<option value="Admin" selected="@(Model.Role == "Admin")">Admin</option>
		</select>
    </div>

	<button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>