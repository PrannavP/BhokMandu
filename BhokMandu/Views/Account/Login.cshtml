@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body>
    <div class="container-fluid d-flex justify-content-center align-items-center" style="height: 80vh; padding: 0;">
        <div class="col-md-4">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-primary text-white">
                    <h3>User Login</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Login">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" id="email" name="email" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" id="password" name="password" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>

                    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
                    {
                        <div class="alert alert-danger mt-3">
                            @ViewData["ErrorMessage"]
                        </div>
                    }

                    <!-- Links below the form -->
                    <div class="mt-3 text-center">
                        <a href="/Account/ForgotPassword" class="text-primary" style="text-decoration: none;">Forgot Password?</a>
                    </div>
                    <div class="mt-2 text-center">
                        <a href="/Account/Register" class="btn btn-link text-primary" style="text-decoration: none;">Create an Account</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>